{
    "compilerOptions": {
        "baseUrl": ".",
        "lib": [
            "dom",
            "es5",
            "es2015",
            "es2015.promise"
        ],
        "isolatedModules": false,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "removeComments": true,
        "suppressImplicitAnyIndexErrors": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "sourceMap": true,
        "typeRoots": [
            "node_modules/@types",
            "src/typings"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "src": ["src"]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "compileOnSave": false
}
